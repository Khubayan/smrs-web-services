    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "source-map-support": "^0.5.21",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  }
