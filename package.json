{
  "name": "smrs-api",
  "version": "1.0.0",
  "description": "Web API services for SMRS",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "build": "npx tsc ",
    "start": "node dist/server.js",
    "dev": "concurrently \" npx tsc --watch\" \"node --watch dist/server.js\"",
